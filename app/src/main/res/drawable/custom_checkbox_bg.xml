<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo quando a checkbox está marcada -->
            <stroke
                android:width="2dp"
                android:color="#FF0000"/> <!-- Cor da borda quando a checkbox está marcada -->
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo quando a checkbox não está marcada -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- Cor da borda quando a checkbox não está marcada -->
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>